<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>URL Shortener</title>
    <style>
        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            max-width: 800px;
            margin: 0 auto;
            padding: 20px;
            background-color: #f0f2f5;
            color: #333;
        }
        h1 {
            color: #2a4d69;
            text-align: center;
            font-size: 2.5rem;
            margin-bottom: 1.5rem;
            text-shadow: 1px 1px 2px rgba(0,0,0,0.1);
        }
        .container {
            background-color: white;
            padding: 35px;
            border-radius: 12px;
            box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
        }
        .form-group {
            margin-bottom: 25px;
            position: relative;
        }
        label {
            display: block;
            margin-bottom: 10px;
            font-weight: 600;
            color: #2a4d69;
            font-size: 1.1rem;
        }
        .url-input-container {
            display: flex;
            align-items: center;
            box-shadow: 0 2px 6px rgba(0, 0, 0, 0.08);
            border-radius: 6px;
            overflow: hidden;
        }
        .url-prefix {
            background-color: #4b86b4;
            padding: 12px 15px;
            color: white;
            font-weight: bold;
            border: none;
            min-width: 90px;
            text-align: center;
        }
        .url-input {
            flex: 1;
            padding: 12px 15px;
            border: 1px solid #e1e4e8;
            border-left: none;
            font-size: 16px;
            transition: all 0.3s;
        }
        .url-input:focus {
            outline: none;
            border-color: #4b86b4;
            box-shadow: 0 0 0 2px rgba(75, 134, 180, 0.2);
        }
        button {
            background-color: #2a4d69;
            color: white;
            padding: 14px 20px;
            border: none;
            border-radius: 6px;
            cursor: pointer;
            font-size: 16px;
            width: 100%;
            font-weight: 600;
            transition: all 0.3s;
            box-shadow: 0 4px 6px rgba(42, 77, 105, 0.2);
        }
        button:hover {
            background-color: #1e3a50;
            transform: translateY(-2px);
            box-shadow: 0 6px 8px rgba(42, 77, 105, 0.3);
        }
        button:active {
            transform: translateY(0);
            box-shadow: 0 2px 4px rgba(42, 77, 105, 0.3);
        }
        .result {
            margin-top: 35px;
            padding: 25px;
            background-color: #f6f9fc;
            border-radius: 8px;
            border-left: 5px solid #4b86b4;
            animation: fadeIn 0.5s ease-in-out;
        }
        @keyframes fadeIn {
            from { opacity: 0; transform: translateY(10px); }
            to { opacity: 1; transform: translateY(0); }
        }
        .error {
            color: #e74c3c;
            background-color: #fdf0ed;
            padding: 15px;
            margin-bottom: 25px;
            border-radius: 6px;
            border-left: 5px solid #e74c3c;
        }
        .shortened-url {
            padding: 12px 15px;
            background-color: #eaf2f8;
            border-radius: 4px;
            font-size: 1.1rem;
            word-break: break-all;
            border: 1px solid #d4e5f2;
            margin-top: 10px;
        }
        .shortened-url a {
            color: #4b86b4;
            text-decoration: none;
            font-weight: bold;
            transition: all 0.2s;
        }
        .shortened-url a:hover {
            color: #2a4d69;
            text-decoration: underline;
        }
        .copy-btn {
            margin-top: 10px;
            background-color: #4b86b4;
            color: white;
            border: none;
            padding: 8px 15px;
            border-radius: 4px;
            cursor: pointer;
            font-size: 14px;
        }
        .copy-btn:hover {
            background-color: #3a6d96;
        }
        .footer {
            text-align: center;
            margin-top: 40px;
            color: #6c757d;
            font-size: 0.9rem;
        }
        .feedback {
            margin-top: 6px;
            font-size: 0.85rem;
        }
        
        .feedback.error {
            color: #e74c3c;
            background-color: transparent;
            padding: 0;
            margin-bottom: 0;
            border-left: none;
        }
        
        .feedback.success {
            color: #2ecc71;
        }
        
        .url-input.invalid {
            border-color: #e74c3c;
        }
        
        .url-input.valid {
            border-color: #2ecc71;
        }
    </style>
</head>
<body>
    <div class="container">
        <h1>URL Shortener</h1>
        
        <% if (error) { %>
        <div class="error">
            <strong>Error:</strong> <%= error %>
        </div>
        <% } %>
        
        <form action="/shorten" method="POST" id="shortenForm">
            <div class="form-group">
                <label for="url">Enter your URL:</label>
                <div class="url-input-container">
                    <div class="url-prefix">https://</div>
                    <input type="text" id="url" name="url" class="url-input" placeholder="example.com" required>
                </div>
                <div id="url-feedback" class="feedback"></div>
            </div>
            <button type="submit" id="submitBtn">Shorten URL</button>
        </form>
        
        <% if (shortenedUrl) { %>
        <div class="result">
            <h3>Your shortened URL:</h3>
            <div class="shortened-url">
                <a href="<%= shortenedUrl.short_url %>" target="_blank" id="shortened-link"><%= shortenedUrl.short_url %></a>
            </div>
            <button class="copy-btn" onclick="copyToClipboard()">Copy to Clipboard</button>
            
            <% if (shortenedUrl.long_url) { %>
            <p style="margin-top: 15px; color: #666;">
                Original URL: <span style="color: #333; word-break: break-all;"><%= shortenedUrl.long_url %></span>
            </p>
            <% } %>
        </div>
        <% } %>
        
        <div class="footer">
            URL Shortener App Â© <%= new Date().getFullYear() %>
        </div>
    </div>

    <script>
        // Prevent users from trying to edit the https:// part
        document.addEventListener('DOMContentLoaded', function() {
            const urlInput = document.getElementById('url');
            const urlFeedback = document.getElementById('url-feedback');
            const submitBtn = document.getElementById('submitBtn');
            const form = document.getElementById('shortenForm');
            
            // Remove protocol prefix
            urlInput.addEventListener('input', function() {
                // Remove any protocol prefix the user might try to add
                this.value = this.value.replace(/^https?:\/\//, '');
                validateUrl();
            });
            
            function validateUrl() {
                const url = urlInput.value.trim();
                
                // Reset validation state
                urlInput.classList.remove('valid', 'invalid');
                urlFeedback.textContent = '';
                urlFeedback.className = 'feedback';
                submitBtn.disabled = false;
                
                if (!url) return;
                
                // Check for TLD (at least one dot)
                if (!url.includes('.')) {
                    urlInput.classList.add('invalid');
                    urlFeedback.textContent = 'Please include a domain extension (e.g. .com, .org)';
                    urlFeedback.classList.add('error');
                    submitBtn.disabled = true;
                    return false;
                }
                
                // Basic domain validation
                const domainPattern = /^([a-zA-Z0-9][-a-zA-Z0-9]*[a-zA-Z0-9]\.)+[a-zA-Z]{2,}(\/.*)?$/;
                if (!domainPattern.test(url)) {
                    urlInput.classList.add('invalid');
                    urlFeedback.textContent = 'Please enter a valid domain name';
                    urlFeedback.classList.add('error');
                    submitBtn.disabled = true;
                    return false;
                }
                
                // URL looks valid
                urlInput.classList.add('valid');
                urlFeedback.textContent = 'Valid URL format';
                urlFeedback.classList.add('success');
                return true;
            }
            
            // Validate on form submission
            form.addEventListener('submit', function(e) {
                if (!validateUrl()) {
                    e.preventDefault();
                }
            });
        });
        
        // Copy to clipboard functionality
        function copyToClipboard() {
            const shortLink = document.getElementById('shortened-link');
            const textArea = document.createElement('textarea');
            textArea.value = shortLink.textContent;
            document.body.appendChild(textArea);
            textArea.select();
            document.execCommand('copy');
            document.body.removeChild(textArea);
            
            const copyBtn = document.querySelector('.copy-btn');
            const originalText = copyBtn.textContent;
            copyBtn.textContent = 'Copied!';
            copyBtn.style.backgroundColor = '#28a745';
            
            setTimeout(() => {
                copyBtn.textContent = originalText;
                copyBtn.style.backgroundColor = '#4b86b4';
            }, 2000);
        }
    </script>
</body>
</html> 